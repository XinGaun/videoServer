<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.DocumentsTabDao">
	<!-- 添加文案模块表 -->
	<insert id="addDocumentsTab" parameterType="com.entity.DocumentsTab">
		INSERT INTO documents_tab(docu_title,docu_status) VALUES (#{docu_title},#{docu_status})
	</insert>
	<!-- 查询文案模块表 -->
	<select id="queryDocumentsTab" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		SELECT docu_id,docu_title,docu_status FROM documents_tab WHERE 1=1 
		<if test="docu_id!=null">
			and docu_id = #{docu_id}
		</if>
		<if test="docu_title!=null">
			and docu_title = #{docu_title}
		</if>
		<if test="docu_status!=null">
			and docu_status = #{docu_status}
		</if>
		LIMIT #{page} OFFSET #{nums}
	</select>
	<!-- 查询配置地址总数 -->
	<select id="queryDocumentsTabCount" parameterType="java.util.HashMap" resultType="int">
		SELECT COUNT(docu_id) FROM documents_tab WHERE 1=1 
		<if test="docu_id!=null">
			and docu_id = #{docu_id}
		</if>
		<if test="docu_title!=null">
			and docu_title = #{docu_title}
		</if>
		<if test="docu_status!=null">
			and docu_status = #{docu_status}
		</if> 
	</select>
	<!-- 更新文案模块表 -->
	<update id="updateDocumentsTab" parameterType="com.entity.DocumentsTab">
		UPDATE documents_tab 
		<trim prefix="set" suffixOverrides=",">
			<if test="docu_title!=null">
				docu_title=#{docu_title},
			</if>
			<if test="docu_status!=null">
				docu_status=#{docu_status},
			</if>
		</trim> 
		WHERE docu_id =#{docu_id}
	</update>
	<!-- 删除文案模块表 -->
	<delete id="deleteDocumentsTab" parameterType="int">
		DELETE FROM documents_tab WHERE docu_id=#{docu_id}
	</delete>
</mapper>