<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.ExampleTabDao">
	<!-- 添加分实例信息 -->
	<insert id="addExampleTab" parameterType="com.entity.ExampleTab">
		INSERT INTO example_tab(example_name, example_IP) VALUES (#{example_name},#{example_IP})
	</insert>
	<!-- 查询分公司实例信息 -->
	<select id="queryExampleTab" resultType="com.entity.ExampleTab" parameterType="java.util.HashMap">
		SELECT example_id,example_name,example_IP FROM example_tab where 1=1
		<if test="example_id!=null">
			and example_id = #{example_id}
		</if>
	</select>
	<!-- 修改分公司实例信息 -->
	<update id="updateExampleTab" parameterType="com.entity.ExampleTab">
		UPDATE example_tab 
		<trim prefix="set" suffixOverrides=",">
			<if test="example_name!=null">
				example_name=#{example_name},
			</if>
			<if test="example_IP!=null">
				example_IP=#{example_IP},
			</if>
		</trim>
		 WHERE example_id = #{example_id}
	</update>
	<!-- 删除分公司实例信息 -->
	<delete id="deleteExampleTab" parameterType="java.util.ArrayList">
		DELETE FROM example_tab WHERE example_id IN 
		<foreach collection="list" item="example_id" index="index" open="(" close=")" separator=",">
			#{example_id}
		</foreach>
	</delete>
</mapper>