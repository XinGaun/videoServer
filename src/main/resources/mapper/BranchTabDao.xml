<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.BranchTabDao">
	<!-- 添加分公司信息 -->
	<insert id="addBranchTab" parameterType="java.util.HashMap">
		INSERT INTO branch_tab(bran_name, bran_addr) VALUES (#{bran_name},#{bran_addr})
	</insert>
	<!-- 查询分公司信息 -->
	<select id="queryBranchTab" resultType="java.util.HashMap" parameterType="java.util.HashMap">
		SELECT bran_id,bran_name,bran_addr FROM branch_tab
		<if test="bran_id!=null">
			and bran_id = #{bran_id}
		</if>
		<if test="bran_name!=null">
			and bran_name = #{bran_name}
		</if>
		<if test="bran_addr!=null">
			and bran_addr = #{bran_addr}
		</if>
	</select>
	<!-- 更新分公司信息 -->
	<update id="updateBranchTab" parameterType="java.util.HashMap">
		UPDATE branch_tab 
		<trim prefix="set" suffixOverrides=",">
			<if test="bran_name!=null">
				bran_name=#{bran_name},
			</if>
			<if test="bran_addr!=null">
				bran_addr=#{bran_addr},
			</if>
		</trim> 
		WHERE bran_id =#{bran_id}
	</update>
	<!-- 删除分公司信息 -->
	<delete id="deleteBranchTab" parameterType="int">
		DELETE FROM branch_tab WHERE bran_id =#{bran_id}
	</delete>
</mapper>